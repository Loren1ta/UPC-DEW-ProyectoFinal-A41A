<h1>Listing concerts</h1>

<table>
  <tr>
    <th>Headline</th>
    <th>Description</th>
    <th>Datestart</th>
    <th>Dateend</th>
    <th>Totalscore</th>
    <th>Local</th>
    <th>Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @concerts.each do |concert| %>
  <tr>
    <td><%= concert.headline %></td>
    <td><%= concert.description %></td>
    <td><%= concert.datestart %></td>
    <td><%= concert.dateend %></td>
    <td><%= concert.totalscore %></td>
    <td><%= concert.local %></td>
    <td><%= concert.group %></td>
    <td><%= link_to 'Show', concert , class: 'link_button'%></td>
    <td><%= link_to 'Edit', edit_concert_path(concert) , class: 'link_button'%></td>
    <td><%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' } , class: 'link_button'%></td>
  </tr>
<% end %>
</table>

<br />

