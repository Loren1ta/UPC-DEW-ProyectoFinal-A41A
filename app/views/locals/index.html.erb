<h1>Listing locals</h1>

<table class="box-table-a">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>District</th>
    <th>Address</th>
    <th>Geolocation</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locals.each do |local| %>
  <tr>
    <td><%= local.name %></td>
    <td><%= local.description %></td>
    <td><%= local.district %></td>
    <td><%= local.address %></td>
    <td><%= local.geolocation %></td>
    <td><%= local.phone %></td>
    <td><%= link_to 'Show', local %></td>
    <td><%= link_to 'Edit', edit_local_path(local) %></td>
    <td><%= link_to 'Destroy', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

